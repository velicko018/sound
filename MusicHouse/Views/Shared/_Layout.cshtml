<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/theme")

</head>

<body>
@if (!System.Web.HttpContext.Current.Application.AllKeys.Contains("Exception"))
{
    @Html.Partial("Partial/Sidebar")

    @Html.Partial("Partial/Navigation")
}
    <div class="soundtheme-body" style="opacity: 0; z-index: 999;"></div>

    @RenderBody()
    <hr/>
    <footer>
        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>

</html>
