@section scripts{
    <script>
        var list = document.getElementById("listanbp");
        var pr = document.getElementById("prevnbp");
        pr.onclick = function () {
            for (var i = 0; i < list.children.length; i++) {
                console.log("aaa");
                if (list.children[i].className == "current") {
                    if (list.children[i - 1] != null) {
                        list.children[i].className = "";
                        list.children[i - 1].className = "current";
                        i = list.children.length;
                    }
                }
            }
        }
        var nx = document.getElementById("nextnbp");
        nx.onclick = function () {
            for (var i = 0; i < list.children.length; i++) {
                if (list.children[i].className == "current") {
                    if (list.children[i+1] != null) {
                        list.children[i].className = "";
                        list.children[i + 1].className = "current";
                        i = list.children.length;
                    }
                }
            }
        }

    </script>

}

