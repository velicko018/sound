@model MusicHouse.ViewModels.ArtistAlbumsViewModel

<!-- SOUND THEME / AJAX CONTENT START -->
<div id="content" class="site-content">
    <!-- Content Event Single -->
    <!-- SOUND THEME / HEADER AREA -->
