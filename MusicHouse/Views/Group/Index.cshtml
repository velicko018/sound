@model MusicHouse.ViewModels.GroupViewModel

<!-- SOUND THEME / AJAX CONTENT START -->
<div id="content" class="site-content">
    <!-- SOUND THEME / MODULE SLIDER -->
    <!-- Module Slider -->

    <div id="component" class="component component-fullwidth fxSoftScale">
        <ul class="itemwrap">
            <li class="current" style="background-image: url(http://pock.be/sound/wp-content/uploads/2015/10/Artist-Slide.png);">
                <div class="soundtheme-slidertitle">
                    <h1>Micheal Smith</h1>
                    <h2>Jazz Musician</h2>
                    <div class="soundtheme-slider-button">
                        <a href="http://www.pock.site/sound/micheal-smith/" class="btn btn-lg btn-success">
                            Artist Page
                        </a>
                    </div>
                </div>
                <img src="http://pock.be/sound/wp-content/uploads/2015/10/Artist-Slide.png" alt="Slider" />
            </li>
            <li style="background-image: url(http://pock.be/sound/wp-content/uploads/2015/10/Artist-Slides.png);">
                <div class="soundtheme-slidertitle">
                    <h1>Elizabeth Smith</h1>
                    <h2>Rock Musician</h2>
                    <div class="soundtheme-slider-button">
                        <a href="http://www.pock.site/sound/elizabeth-smith/" class="btn btn-lg btn-success">
                            Artist Page
                        </a>
                    </div>
                </div>
                <img src="http://pock.be/sound/wp-content/uploads/2015/10/Artist-Slides.png" alt="Slider" />
            </li>
        </ul>
        <nav>
            <a class="prev" href="#"><i class="fa fa-chevron-left"></i></a>
            <a class="next" href="#"><i class="fa fa-chevron-right"></i></a>
        </nav>
    </div>
    <div class="clearfix"></div>

    <!-- SOUND THEME / HEADER BOTTOM -->
    <div class="container-fluid soundtheme-header-bottomback">
        <div class="container">
            <div class="row">
                <div class="hidden-xs hidden-sm col-md-3">
                    <div class="soundtheme-mini-share-two">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index", "Home")" class="">
                                    <i class="fa fa-home"></i> 
                                    Home
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- SOUND THEME / RESPONSIVE SPACE -->
    <div class="soundtheme-single-space"></div>

    <!-- SOUND THEME / DETAILS -->
    <div class="container-fluid soundtheme-white-backone soundtheme-single-details soundtheme-blog-loops">
        <div class="container">
            <div class="row">

                <!-- # LEFT BLOG -->
                <!-- #BLOG LIST -->
                <div class="col-md-8">
                    <div id="groupModel" class="row soundtheme-blog-listing">
                        @foreach (var item in Model.Groups)
                        {
                            <div class="soundtheme-blogs">
                                <div class="col-md-5">
                                    <div class="soundtheme-blog-list-img">
                                        <div class="soundtheme-single-gallery">
                                            <a href="http://pock.be/sound/normal-blog-post/">
                                                <img width="450" height="450" src="http://pock.be/sound/wp-content/uploads/2015/10/photo-1436476549056-cdf7e8f3d8e3-450x450.jpg" class="attachment-soundtheme-thumb-medium size-soundtheme-thumb-medium wp-post-image" alt="" srcset="http://pock.be/sound/wp-content/uploads/2015/10/photo-1436476549056-cdf7e8f3d8e3-450x450.jpg 450w, http://pock.be/sound/wp-content/uploads/2015/10/photo-1436476549056-cdf7e8f3d8e3-150x150.jpg 150w, http://pock.be/sound/wp-content/uploads/2015/10/photo-1436476549056-cdf7e8f3d8e3-250x250.jpg 250w" sizes="(max-width: 450px) 100vw, 450px"/>
                                                <div class="soundtheme-hover-play">
                                                    <i class="fa fa-hand-peace-o"></i>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="soundtheme-blog-list">
                                        <h1><a href="http://pock.be/sound/normal-blog-post/">@item.Data.GroupName</a>
                                        </h1>
                                        <hr/>
                                        <div class="soundtheme-post-detail">
                                            <p>A faucibus velit adipiscing est vitae scelerisque tristique
                                                eu adipiscing porta suspendisse aliquet duis class phasellus
                                                euismod fames parturient hac ac elit elit eleifend litora condimentum at. 
                                                Lorem parturient primis viverra nunc ipsum nisl eleifend donec consectetur
                                                magna fusce hendrerit a lobortis laoreet adipiscing ad suspendisse dui a dictum. 
                                            
                                            </p>
                                            @Html.ActionLink("Details", "Details",new { id=  @item.Reference.Id})           
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="clearfix"></div>

                        }
                    </div>
                </div>
                <!-- #SIDEBAR -->
                <div class="col-md-4">
                    <div class="soundtheme-widget">
                        
                        <aside id="archives-2" class="widget widget_archive">
                            <div class="soundtheme-widgettitle"><h1 class="widget-title">Genres</h1></div>		
                                <ul>
                                    @{
                                        foreach (var item in Model.Genres)
                                        {
                                            @Ajax.ActionLink(item.Data.Name, "Index", new {name = item.Data.Name}, new AjaxOptions()
                                            {
                                                HttpMethod = "GET",
                                                InsertionMode = InsertionMode.Replace,
                                                UpdateTargetId = "groupModel",
                                            }, new { @class = "list-group-item"});
                                        }
                                    }
                                </ul>
                        </aside>
                    </div>
                </div>
                <div class="clearfix"></div>

                <!-- # RIGHT BLOG -->

            </div>
        </div>
    </div>
    <div class="clearfix"></div>


    <style type="text/css">
        .soundtheme-footer-wall {
            background: url(http://pock.be/sound/wp-content/uploads/2015/10/Contact-Back.png) no-repeat center center;
            background-color: #24252A;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src="http://pock.be/sound/wp-content/uploads/2015/10/Contact-Back.png", sizingMethod='scale');
            -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='http://pock.be/sound/wp-content/uploads/2015/10/Contact-Back.png', sizingMethod='scale')";
        }
    </style>

